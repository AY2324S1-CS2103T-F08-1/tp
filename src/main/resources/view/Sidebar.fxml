<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>

<!-- Sidebar -->
<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" styleClass="sidebar" minWidth="200" spacing="10">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Button graphicTextGap="10.0" maxWidth="Infinity" styleClass="sidebar-button" text="Patients">
        <graphic>
            <ImageView fx:id="patientsIcon" fitHeight="20" fitWidth="20" />
        </graphic>
    </Button>
    <Button maxWidth="Infinity" styleClass="sidebar-button" text="Medical History">
        <graphic>
            <ImageView fx:id="historyIcon" fitHeight="20" fitWidth="20" />
        </graphic>
    </Button>
    <Button maxWidth="Infinity" styleClass="sidebar-button" text="Appointments">
        <graphic>
            <ImageView fx:id="appointmentsIcon" fitHeight="20" fitWidth="20" />
        </graphic>
    </Button>
    <Separator />
    <Button maxWidth="Infinity" onAction="#handleHelp" styleClass="sidebar-button" text="Help">
        <graphic>
            <ImageView fx:id="helpIcon" fitHeight="20" fitWidth="20" />
        </graphic>
    </Button>
    <Button maxWidth="Infinity" onAction="#handleExit" styleClass="sidebar-button" text="Exit">
        <graphic>
            <ImageView fx:id="exitIcon" fitHeight="20" fitWidth="20" />
        </graphic>
    </Button>
</VBox>